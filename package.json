{
  "name": "llamacpp-distributed-inference",
  "version": "0.0.7",
  "description": "分佈式 LLM 推理桌面應用程式",
  "main": "src/main/index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "download-binaries": "node scripts/download-binaries.js",
    "download-binaries:win": "node scripts/download-binaries.js windows",
    "download-binaries:mac": "node scripts/download-binaries.js macos",
    "download-binaries:linux": "node scripts/download-binaries.js linux",
    "prepare-build": "npm run download-binaries && npm run build"
  },
  "keywords": ["electron", "llm", "distributed", "inference"],
  "author": "The Walking Fish步行魚",
  "license": "Apache 2.0",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.the-walking-fish.distributed-llm",
    "productName": "分佈式 LLM 推理器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "models/",
      "models/README.md",
      "images/**/*",
      "!models/*.gguf"
    ],
    "extraFiles": [
      {
        "from": "bin",
        "to": "resources/bin",
        "filter": ["**/*"]
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "images/icon.ico",
      "uninstallerIcon": "images/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": "portable",
      "icon": "images/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "images/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "images/icon.png",
      "category": "Utility"
    }
  }
}